<aside
  class="sidebar flex h-full w-[290px] flex-col bg-slate-900 border-r sc-border"
>
  <!-- SIDEBAR HEADER -->
  <div class="flex items-center gap-3 p-6 border-b sc-border">
    <div
      class="w-8 h-8 bg-gradient-to-r from-blue-600 to-orange-500 rounded-lg flex items-center justify-center"
    >
      <svg
        class="w-5 h-5 text-white"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M13 10V3L4 14h7v7l9-11h-7z"
        ></path>
      </svg>
    </div>
    <span class="text-xl font-bold sc-text">SC Companion</span>
  </div>

  <!-- SIDEBAR CONTENT -->
  <div class="flex-1 flex flex-col p-4">
    <!-- Menu Section -->
    <div class="mb-8">
      <h3
        class="text-xs font-semibold uppercase tracking-wider sc-text-secondary mb-4 px-2"
      >
        Menu
      </h3>

      <nav class="space-y-2">
        <!-- Dashboard -->
        <a
          href="#"
          @click.prevent="selected = 'Dashboard'"
          class="menu-item flex items-center gap-3 px-3 py-2.5 rounded-lg transition-all duration-200"
          :class="selected === 'Dashboard' ? 'menu-item-active' : 'menu-item-inactive'"
        >
          <svg
            class="w-5 h-5"
            :class="selected === 'Dashboard' ? 'menu-item-icon-active' : 'menu-item-icon-inactive'"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6H8V5z"
            ></path>
          </svg>
          <span class="font-medium">Dashboard</span>
        </a>

        <!-- Analytics -->
        <a
          href="#"
          @click.prevent="selected = 'Analytics'"
          class="menu-item flex items-center gap-3 px-3 py-2.5 rounded-lg transition-all duration-200"
          :class="selected === 'Analytics' ? 'menu-item-active' : 'menu-item-inactive'"
        >
          <svg
            class="w-5 h-5"
            :class="selected === 'Analytics' ? 'menu-item-icon-active' : 'menu-item-icon-inactive'"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
            ></path>
          </svg>
          <span class="font-medium">Analytics</span>
        </a>

        <!-- Settings -->
        <a
          href="#"
          @click.prevent="selected = 'Settings'"
          class="menu-item flex items-center gap-3 px-3 py-2.5 rounded-lg transition-all duration-200"
          :class="selected === 'Settings' ? 'menu-item-active' : 'menu-item-inactive'"
        >
          <svg
            class="w-5 h-5"
            :class="selected === 'Settings' ? 'menu-item-icon-active' : 'menu-item-icon-inactive'"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
            ></path>
          </svg>
          <span class="font-medium">Paramètres</span>
        </a>

        <!-- Profile -->
        <a
          href="#"
          @click.prevent="selected = 'Profile'"
          class="menu-item flex items-center gap-3 px-3 py-2.5 rounded-lg transition-all duration-200"
          :class="selected === 'Profile' ? 'menu-item-active' : 'menu-item-inactive'"
        >
          <svg
            class="w-5 h-5"
            :class="selected === 'Profile' ? 'menu-item-icon-active' : 'menu-item-icon-inactive'"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
            ></path>
          </svg>
          <span class="font-medium">Profil</span>
        </a>
      </nav>
    </div>

    <!-- User Profile Section -->
    <div class="mt-auto">
      <div class="sc-card rounded-lg p-4">
        <div class="flex items-center gap-3">
          <div
            class="w-10 h-10 bg-gradient-to-r from-blue-600 to-orange-500 rounded-full flex items-center justify-center"
          >
            <span class="text-sm font-semibold text-white">
              <%= user?.username?.charAt(0).toUpperCase() || 'U' %>
            </span>
          </div>
          <div class="flex-1 min-w-0">
            <h5 class="text-sm font-medium sc-text truncate">
              <%= user?.username || 'Utilisateur' %>
            </h5>
            <p class="text-xs sc-text-secondary">Connecté</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</aside>
