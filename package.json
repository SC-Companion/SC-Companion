{
  "name": "@sc-companion/desktop",
  "version": "0.0.1",
  "description": "SC Companion - Application desktop Electron",
  "author": "SC Companion Team <contact@sc-companion.com>",
  "main": "dist/electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:installer": "npm run build && electron-builder",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "build": {
    "appId": "com.sc-companion.desktop",
    "productName": "SC Companion",
    "copyright": "Copyright Â© 2024 SC Companion",
    "compression": "normal",
    "electronVersion": "27.0.0",
    "directories": {
      "output": "./dist-installer"
    },
    "publish": {
      "provider": "github",
      "owner": "SC-Companion",
      "repo": "SC-Companion"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    },
    "linux": {
      "target": "AppImage",
      "category": "Network"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "electron-updater": "^6.1.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.0",
    "react-router-dom": "^6.20.0",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "7zip-bin": "^5.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.2",
    "daisyui": "^4.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.0",
    "wait-on": "^7.2.0"
  }
}
