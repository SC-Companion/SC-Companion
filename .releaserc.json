{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog", 
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# üìù Changelog\n\nToutes les modifications importantes de SC Companion seront document√©es dans ce fichier.\n\nLe format est bas√© sur [Keep a Changelog](https://keepachangelog.com/fr/1.0.0/),\net ce projet adh√®re au [Versioning S√©mantique](https://semver.org/lang/fr/).\n"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist-installer/*.exe",
            "label": "Windows Installer (${nextRelease.gitTag})"
          },
          {
            "path": "dist-installer/*.dmg", 
            "label": "macOS Installer (${nextRelease.gitTag})"
          },
          {
            "path": "dist-installer/*.AppImage",
            "label": "Linux AppImage (${nextRelease.gitTag})"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}